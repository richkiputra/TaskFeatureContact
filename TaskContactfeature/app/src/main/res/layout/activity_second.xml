<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_contact"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">



<LinearLayout
    android:background="@drawable/bg_atas"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_s"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Save"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_l"
        android:layout_marginRight="@dimen/spacing_l"/>

</LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_photo"
            android:layout_gravity="center"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="28sp"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="@dimen/spacing_m"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:cardCornerRadius="@dimen/spacing_m"
            app:contentPadding="@dimen/spacing_m">

            <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_marginLeft="@dimen/spacing_s"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="@dimen/text_m"/>

                <EditText
                    android:id="@+id/etNama"
                    android:layout_margin="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:textSize="32sp"/>

                <TextView
                    android:layout_marginLeft="@dimen/spacing_s"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:textSize="@dimen/text_m"/>

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_margin="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:textSize="32sp"/>

                <TextView
                    android:layout_marginLeft="@dimen/spacing_s"
                    android:layout_marginTop="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="@dimen/text_m"/>

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_margin="@dimen/spacing_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input"
                    android:textSize="32sp"/>

            </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </ScrollView>
</LinearLayout>